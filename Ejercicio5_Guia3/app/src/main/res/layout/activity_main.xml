<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtLado1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese el lado 1:"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/edtLado2"
        app:layout_constraintStart_toStartOf="@+id/edtLado2"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/edtLado2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Ingrese el lado 2:"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/edtLado1"
        tools:layout_editor_absoluteX="31dp" />

    <EditText
        android:id="@+id/edtLado3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Ingrese el lado 3:"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/edtLado2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtLado2"
        app:layout_constraintTop_toBottomOf="@+id/edtLado2" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="Operar"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="@+id/edtLado3"
        app:layout_constraintStart_toStartOf="@+id/edtLado3"
        app:layout_constraintTop_toBottomOf="@+id/edtLado3" />

    <ImageView
        android:id="@+id/imgTriangulo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/btnCalcular"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/btnCalcular"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcular"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>